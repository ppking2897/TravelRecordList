{
  "permissions": {
    "allow": [
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git config:*)",
      "Bash(./gradlew :composeApp:compileKotlinMetadata:*)",
      "Bash(./gradlew :composeApp:compileDebugKotlinAndroid:*)",
      "WebSearch",
      "Bash(claude mcp add context7 -- npx -y @upstash/context7-mcp@latest)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "Bash(./gradlew compileKotlinAndroid:*)",
      "Bash(./gradlew compileDebugKotlinAndroid:*)",
      "Bash(./gradlew compileKotlinDesktop:*)",
      "Bash(./gradlew :composeApp:compileKotlinAndroid:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[提醒] 如有修改程式碼，請執行 /check-architecture 檢查架構'"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[提醒] Agent 完成工作，請執行 /check-architecture 檢查架構'"
          }
        ]
      }
    ]
  }
}
